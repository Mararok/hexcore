{
  "name": "@hexcore/typeorm",
  "version": "0.8.0",
  "engines": {
    "node": ">=16"
  },
  "engine-strict": true,
  "description": "Hexcore typeorm support package",
  "author": "Mararok",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mararok/hexcore.git",
    "directory": "packages/typeorm"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://mararok.github.io/hexcore/",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:clearCache": "jest --clearCache",
    "test:unit": "jest --runInBand --group=unit",
    "test:watch": "jest --runInBand --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublish": "yarn run build"
  },
  "peerDependencies": {
    "@hexcore/core": "^0.8.0",
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/typeorm": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "typeorm": "^0.2.34",
    "mysql2": "^2.3.3"
  },

  "dependencies": {
    "@hexcore/common": "^0.8.0"
  },
  "devDependencies": {
    "@hexcore/core": "^0.8.0",
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/typeorm": "^8.0.3",
    "@nestjs/testing": "^8.4.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "typeorm": "^0.2.34",
    "mysql2": "^2.3.3",
    "//": "optional deps end",
    "@hexcore/mocker": "*",
    "@types/jest": "27.0.*",
    "@types/node": "^16.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "jest": "27.0.*",
    "jest-docblock": "27.0.*",
    "jest-runner": "27.0.*",
    "jest-runner-groups": "^2.1.0",
    "ts-jest": "27.0.*",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/mararok/hexcore/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
