{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
    },
    "types": ["jest", "node"],
    "useDefineForClassFields": false
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["lib", "node_modules"]
}
